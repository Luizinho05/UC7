// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User{
  id      String @id @default(uuid())
  nome    String 
  email   String
  senha   String
  create_at DateTime? @default(now())
  update_at DateTime? @default(now())

  @@map("usuarios")
}

model Clientes{
  id           String @id @default(uuid())
  nome         String
  cpf_cnpj     String
  rg_ie        String
  celular      String
  celularFixo  String
  rua          String
  complemento  String
  bairro       String
  cidade       String
  estado       String
  create_at DateTime? @default(now())
  update_at DateTime? @default(now())

  @@map("clientes")
}

model Produtos{
  id               String @id @default(uuid())
  nome             String
  meio_fabricacao  String
  ingrediente      String
  create_at DateTime? @default(now())
  update_at DateTime? @default(now())

  @@map("produtos")
}